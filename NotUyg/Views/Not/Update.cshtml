@model NotUpdateData
@{
    ViewBag.Title = "Notlar";
}

<div class="container">
    <div class="col-6 mt-5 mx-auto">
        <div class="card shadow-lg border-2 p-3">
            <h3 class="text-center text-black"> <i class="bi bi-journals"></i>  Not Güncelle</h3>

            <form asp-action="Update" asp-controller="Not" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="aciklama" class="form-label">Açıklama</label>
                    <input asp-for="aciklama" class="form-control">
                    <span asp-validation-for="aciklama" class="text-danger"></span>
                </div>

                <div class=" mb-3">

                    <label asp-for="Baslik" class="form-label">Başlık</label>
                    <input asp-for="Baslik" class="form-control">
                    <span asp-validation-for="Baslik" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Tags" class="form-label fw-normal">Etiketler</label>
                    <select asp-for="Tags" asp-items="ViewBag.Tags" class="form-select" id="tagsSelect" multiple></select>
                    <span asp-validation-for="Tags" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label>
                        <input  type="checkbox" asp-for="Durum">
                        Görev Tamamlandı
                    </label>
                    <span asp-validation-for="Durum" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-gear"></i>  Güncelle</button>
                </div>

            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const tagSelect = document.getElementById('tagsSelect');
        if (tagSelect) {
            new Choices(tagSelect, {
                removeItemButton: true,
                placeholder: true,
                placeholderValue: 'Etiket seçin...',
                noResultsText: 'Eşleşme yok',
                itemSelectText: '',                
                classNames: {
                    containerInner: 'form-control'                    
                }
            });
        }
    });
</script>
